{
    "name": "wlbrough/clearbit-api",
    "type": "library",
    "description": "A complete (unofficial) PHP SDK for Clearbit",
    "keywords": [
        "wlbrough",
        "clearbit-api"
    ],
    "homepage": "https://github.com/wlbrough/clearbit-api",
    "license": "MIT",
    "authors": [
        {
            "name": "Bill Broughton",
            "email": "wlbrough@gmail.com",
            "homepage": "https://billbroughton.me",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~5.6|~7.0"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=5.4.3",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "wlbrough\\clearbit-api\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "wlbrough\\clearbit-api\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
